<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingTop">@dimen/layout_margin_04</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/font_size3</item>
    </style>

    <style name="Ingredients01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_margin_16</item>
        <item name="android:paddingRight">@dimen/layout_margin_16</item>
        <item name="android:paddingTop">@dimen/layout_margin_04</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/font_size01</item>
    </style>

    <style name="Ingredients0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/layout_margin_16</item>
        <item name="android:paddingRight">@dimen/layout_margin_16</item>
        <item name="android:paddingTop">@dimen/layout_margin_04</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/font_size0</item>
    </style>

</resources>
