<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_recipe_title"
        style="@style/Title"
        android:layout_marginLeft="@dimen/layout_margin_04"
        android:layout_marginRight="@dimen/layout_margin_04"
        android:layout_marginTop="@dimen/layout_margin_04"
        android:elevation="@dimen/layout_elevation_08" />

    <TextView
        android:id="@+id/widget_ingredients"
        style="@style/Ingredients01"
        android:layout_marginBottom="@dimen/layout_margin_04"
        android:layout_marginLeft="@dimen/layout_margin_04"
        android:layout_marginRight="@dimen/layout_margin_04"
        android:elevation="@dimen/layout_elevation_08" />

</LinearLayout>